<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
android:orientation="vertical">

    <TextView
            android:text="dateEvent"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="36dp"
            tools:layout_editor_absoluteX="142dp"
            android:id="@+id/date"
            tools:ignore="MissingConstraints"/>

    <TextView
            android:text="@string/time"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="36dp"
            tools:layout_editor_absoluteX="142dp"
            android:id="@+id/time_last"
            android:layout_below="@+id/date"
            tools:ignore="MissingConstraints"/>

    <RelativeLayout
            android:layout_below="@id/time_last"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:layout_marginTop="-1dp">
        <TextView
                android:text="home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nameHome"
                android:textSize="14sp"
                tools:ignore="MissingConstraints"/>
        <TextView
                android:layout_toLeftOf="@id/vs"
                android:textSize="14sp"
                android:layout_marginRight="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scoreHome"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"/>
        <TextView
                android:text="VS"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vs"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"/>
        <TextView
                android:layout_toRightOf="@id/vs"
                android:layout_marginLeft="40dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/awayScore"
                android:layout_alignParentTop="true"/>
        <TextView
                android:layout_alignParentRight="true"
                android:text="away"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nameAway"
                android:textSize="14sp"/>
    </RelativeLayout>
</RelativeLayout>