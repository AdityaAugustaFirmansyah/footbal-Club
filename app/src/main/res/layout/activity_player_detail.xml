<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".player.PlayerDetail">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:id="@+id/thumb_player"
            android:contentDescription="@string/todo"
            android:src="@mipmap/ic_launcher_round"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weight"
            android:text="@string/weight"
            android:layout_below="@+id/thumb_player"
            android:textSize="20sp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="28dp"
            android:layout_marginStart="66dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_weight"
            android:text="@string/_2_kuintal"
            android:layout_below="@+id/weight"
            android:textSize="20sp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="13dp"
            android:layout_marginStart="60dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/height"
            android:text="@string/weight"
            android:layout_toRightOf="@+id/weight"
            android:layout_below="@+id/thumb_player"
            android:textSize="20sp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="28dp"
            android:layout_marginStart="271dp"
            android:layout_marginLeft="143dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_height"
            android:text="@string/_2_kuintal"
            android:layout_below="@+id/weight"
            android:layout_toEndOf="@id/text_weight"
            android:textSize="20sp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="14dp"
            android:layout_marginStart="265dp"
            android:layout_marginLeft="129dp"
            tools:ignore="RtlHardcoded"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_position"
            android:text="@string/_2_kuintal"
            android:layout_below="@+id/text_height"
            android:textSize="20sp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="129dp"
            tools:ignore="RtlHardcoded"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_desc_player"
            android:layout_below="@id/text_position"
            android:text="@string/app_name"/>

    <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progress_player_detail"/>


</RelativeLayout>

</ScrollView>